input NodeFilterInput {
  referenceIds: [String]
  name: String
  references: [ReferenceFilterInput]
}

type NodeConnection {
  edges: [NodeEdge!]!
  pageInfo: PageInfo!
}

type NodeEdge {
  cursor: String!
  node: Location!
}

extend type Query {
  nodes(
    filter: NodeFilterInput,
    first: Int,
    after: String,
    last: Int,
    before: String
  ): NodeConnection!
}